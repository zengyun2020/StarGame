<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pay_appui_ll"
    android:layout_width="299dp"
    android:layout_height="310dp"
    android:layout_gravity="center"
     >
    <RelativeLayout
        android:id="@+id/pay_bg_out"
        android:layout_width="299dp"
        android:layout_height="310dp"
        android:layout_centerInParent="true" > 
    
	    <RelativeLayout
	        android:id="@+id/pay_bg"
	        android:layout_width="299dp"
	        android:layout_height="260dp"
	        android:layout_centerInParent="true"
	        android:background="@drawable/pay_bg" >
				
	        <ImageView
	            android:id="@+id/pay_tip2"
	            android:layout_width="262dp"
	            android:layout_height="29dp"
	            android:layout_alignParentBottom="true"
	            android:layout_marginBottom="90dp"
	            android:layout_centerHorizontal="true"
	            android:background="@drawable/pay_tip_sky"/>
	
	        <ImageButton
	            android:id="@+id/pay_cancel"
	            android:layout_width="13dp"
	            android:layout_height="12dp"
	            android:layout_alignParentRight="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginTop="9dp"
	            android:layout_marginRight="18dp"
	            android:background="@drawable/pay_cancel_up" />
	
	        <ImageView
	            android:id="@+id/pay_tip1"
	            android:layout_width="259dp"
	            android:layout_height="81dp"
	            android:layout_centerHorizontal="true"
	            android:layout_alignParentTop="true"
	            android:layout_marginTop="43dp"
	            android:background="@drawable/pay_tip_goods_1" />
	        
	        <ImageView
	            android:id="@+id/revive_num"
	            android:layout_width="20dp"
	            android:layout_height="26dp"	            
	            android:layout_alignParentTop="true"
	            android:layout_alignParentLeft="true"
	            android:layout_marginTop="58dp"
	            android:layout_marginLeft="110dp"
	            android:visibility="invisible"
	            android:background="@drawable/reborn_1" />
	
	    </RelativeLayout>	       
	        
        <ImageView
            android:id="@+id/pay_title"
            android:layout_width="81dp"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
			android:background="@drawable/pay_title_1" /> 
			
         <ImageButton
	        android:id="@+id/pay_confirm"
	        android:layout_width="133dp"
	        android:layout_height="47dp"
	        android:layout_centerHorizontal="true"
	        android:layout_alignParentBottom="true"
	        android:layout_marginBottom="43dp"
	        android:background="@drawable/pay_confirm_up" />
    </RelativeLayout>
</RelativeLayout>